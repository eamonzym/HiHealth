<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/exercise_name"
                android:layout_marginBottom="8dp"
                android:textSize="16sp"
                style="@style/BaseText"
                android:text="慢跑"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#f54545"
                    android:id="@+id/exercise_cal"
                    style="@style/BaseText"
                    android:textSize="16sp"
                    android:text="280"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/exercise_exerciseeffecttime"
                    android:textColor="@color/default_text_grey_color"
                    android:text="  千卡 / 60分钟"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_alignParentBottom="true"
            style="@style/BaseLongDividerLine"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/target_time" />
    </RelativeLayout>
