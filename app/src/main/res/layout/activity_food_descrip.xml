<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@color/quxian_lan">

            <LinearLayout
                android:id="@+id/left_back_view"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:onClick="onClick">

                <ImageView
                    android:layout_width="11dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/zuojiantou_bai" />
            </LinearLayout>
            <TextView
                android:id="@+id/food_title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#ffff"
                android:textSize="20sp" />

        </RelativeLayout>

        <View style="@style/BaseLongDividerLine"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/food_name"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:layout_marginLeft="16dp"
                        style="@style/BaseText"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="红薯" />

                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_marginBottom="8dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="0dp">

                            <TextView
                                style="@style/BaseText"
                                android:layout_weight="1"
                                android:layout_marginTop="8dp"
                                android:text="热量 / 100g "
                                android:textSize="12sp"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/food_cal"
                                android:layout_weight="1"
                                android:layout_marginTop="8dp"
                                android:text="80.3Kcal"
                                android:textSize="12sp"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <View
                            android:layout_width="150dp"
                            style="@style/BaseLongDividerLine"/>

                        <LinearLayout
                            android:layout_marginBottom="8dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="0dp">

                            <TextView
                                style="@style/BaseText"
                                android:layout_weight="1"
                                android:layout_marginTop="8dp"
                                android:text="食物类型 "
                                android:textSize="12sp"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/food_type"
                                android:layout_weight="1"
                                android:layout_marginTop="8dp"
                                android:text="高碳水"
                                android:textSize="12sp"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <View
                            android:layout_width="150dp"
                            style="@style/BaseLongDividerLine"/>

                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="0dp">

                            <TextView
                                style="@style/BaseText"
                                android:layout_weight="1"
                                android:layout_marginTop="8dp"
                                android:text="食用建议 "
                                android:textSize="12sp"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/food_suggest"
                                android:layout_weight="1"
                                android:layout_marginTop="8dp"
                                android:text="推荐"
                                android:textSize="12sp"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>



                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/food_descrip"
                        style="@style/BaseText"
                        android:layout_margin="16dp"
                        android:text="小米属于粗粮，又称粟米，含有较高的胡萝卜素及维生素B1，推荐食用"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <View
                        android:layout_marginBottom="16dp"
                        style="@style/BaseLongDividerLine"/>

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:id="@+id/image"
                        android:layout_width="match_parent"
                        android:layout_height="370dp"
                        android:src="@drawable/user_info_test"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>


    </LinearLayout>


</LinearLayout>
